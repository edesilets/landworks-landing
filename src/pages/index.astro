---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { Image } from "astro:assets";
import companyLogo from "../../public/Desilets-Graphic.svg";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<!-- <Header /> -->
		<main
			class="flex flex-col items-center justify-center min-h-screen px-6 py-10 text-center"
		>
			<!-- Logo -->
			<div class="w-full max-w-xs sm:max-w-sm md:max-w-md mb-6">
				<Image
					src={companyLogo}
					alt="Desilets Landworks LLC Logo"
					class="w-full h-auto"
				/>
			</div>

			<!-- Heading -->
			<h1
				class="text-3xl sm:text-4xl font-bold mb-4 tracking-wide text-white"
			>
				Contact Us for a Quote
			</h1>

			<!-- Phone -->
			<a
				href="tel:+15089667135"
				class="text-lg sm:text-xl text-white hover:text-orange-400 transition-colors duration-200 mb-2 block"
			>
				(508) 966-7135
			</a>

			<!-- Email -->
			<a
				href="mailto:chad@desiletslandworks.com"
				class="text-lg sm:text-xl text-white hover:text-orange-400 transition-colors duration-200 mb-8 block"
			>
				chad@desiletslandworks.com
			</a>

			<!-- Services List -->
			<ul class="list-none space-y-1 text-lg sm:text-xl text-white">
				<li>Land Clearing</li>
				<li>Site Prep</li>
				<li>Snow Removal</li>
				<li>Dump Trailer Services</li>
				<li>Material Delivery</li>
			</ul>
		</main>
		<!-- <Footer /> -->
	</body>
</html>
